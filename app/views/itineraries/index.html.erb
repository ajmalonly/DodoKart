
<% @i %>
    <%= form_with url: itinaries_path, method: :get, class: "d-flex" do |form| %>
      <%= render 'shared/error_messages' %>
      <%= select_tag(:origin, options_for_select(@station_options, params[:origin]), class: "form-control") %>
      <%= select_tag(:destination, options_for_select(@station_options, params[:destination]), class: "form-control") %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
<div style="width: 100%; height: 600px;"

  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
