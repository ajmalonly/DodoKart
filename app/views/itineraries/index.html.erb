<%= form_with url: itineraries_path, method: :get, class: "itineraries_form" do |form| %>
  <%= render 'shared/error_messages' %>
      <%= select_tag(:origin, options_for_select(@station_options, params[:origin]), class: "form-control mb-1") %>
      <%= select_tag(:destination, options_for_select(@station_options, params[:destination]), class: "form-control mb-1") %>
      <%= submit_tag "Search", class: "btn btn-orange", style: "width: 100%" %>
<% end %>
<div style="width: 100%; height: 550px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
