<h1> Tickets </h1>

<%@tickets.each do |ticket| %>

<div class="col">
		<div class="card radius-10 border-start border-0 border-3 border-success">
		   <div class="card-body">
			   <div class="d-flex align-items-center">
				   <div>
					   <p class="mb-0 text-secondary"><h1>📍<%= ticket.itinerary.origin %></h1></p>
             <%# <h2> to<h2> %>
             <p class="mb-0 text-secondary"> <h1>🚈 <%= ticket.itinerary.destination%></h1></p>
					   <h4 class="my-1 text-warning"><h3> <strong>Price: </strong><%= ticket.price %></h3></h4>
					   <p class="mb-0 font-13"><h3> <strong>Duration:</strong> <%= ticket.itinerary.duration %> min</h3></p>
             <%# <p class="mb-0 font-13"><h3> <strong>Starting time:</strong> <%= ticket.start_time </h3></p> %>
             <button type="button" class="btn btn-success mx-auto mt-2" style="width: 300px;">Buy a ticket </button>
          </div>
			   </div>
		   </div>
		</div>
	  </div>
    <br>
<% end %>
